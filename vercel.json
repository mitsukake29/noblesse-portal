 {
    "buildCommand": "cd frontend && npm install && npm run build",
    "outputDirectory": "frontend/dist",
    "installCommand": "npm install && cd backend && npm install",
    "rewrites": [
      {
        "source": "/api/:path*",
        "destination": "/api/index.js"
      },
      {
        "source": "/uploads/:path*",
        "destination": "/api/index.js"
      },
      {
        "source": "/(.*)",
        "destination": "/index.html"
      }
    ]
  }